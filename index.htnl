<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crypto Portfolio Tracker</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <header>
        <h1>Crypto Portfolio Tracker</h1>
    </header>
    
    <main>
        <!-- Summary Overview -->
        <section id="summary">
            <h2>Portfolio Overview</h2>
            <div id="totalSummary"></div>
        </section>

        <!-- Categories -->
        <section class="categories">
            <div class="category" id="invested">
                <h3>Invested</h3>
                <!-- Cards will be injected here -->
            </div>
            <div class="category" id="postTGE">
                <h3>Post TGE</h3>
                <!-- Cards will be injected here -->
            </div>
            <div class="category" id="dead">
                <h3>Dead</h3>
                <!-- Cards will be injected here -->
            </div>
            <div class="category" id="exited">
                <h3>Exited</h3>
                <!-- Cards will be injected here -->
            </div>
        </section>
    </main>

    <!-- Modal for Project Details -->
    <div id="projectModal" class="modal">
        <div class="modal-content">
            <span class="close-btn">&times;</span>
            <h2>Project Overview</h2>
            <div id="projectDetails"></div>
            <!-- Chart Container for Token Unlock Schedule -->
            <canvas id="unlockScheduleChart"></canvas>
        </div>
    </div>

    <script src="script.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</body>
</html>
